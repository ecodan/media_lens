# Media Lens Environment Variables Template
# Copy this file to .env and update the values for your setup

# AI Provider Configuration
# Options: "claude", "vertex"
AI_PROVIDER=claude

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Vertex AI Configuration
# Required when AI_PROVIDER=vertex
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
VERTEX_AI_PROJECT_ID=your-gcp-project-id
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-2.5-flash

# Google Cloud Storage Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_API_KEY=your-google-api-key
GCP_STORAGE_BUCKET=your-storage-bucket-name
USE_CLOUD_STORAGE=false

# Application Configuration
LOCAL_STORAGE_PATH=/path/to/your/working/directory
PLAYWRIGHT_MODE=local