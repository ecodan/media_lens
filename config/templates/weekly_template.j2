<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Cache-Control" content="max-age=60, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <title>Media Lens - {{ week_display }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html {
            scroll-behavior: smooth;
        }
        .gap-2 {
            gap: 0.5rem !important;
        }
        .header {
            background-color: #212529;
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }
        .header-row {
            background-color: #212529;
            color: white;
            font-weight: bold;
        }
        .data-row:nth-child(odd) {
            background-color: rgba(0, 0, 0, 0.05);
        }
        .footer {
            margin-top: 3rem;
            padding: 1.5rem 0;
            background-color: #f8f9fa;
            text-align: center;
        }
        .date-header {
            background-color: #e9ecef;
            padding: 0.5rem;
            margin: 1.5rem 0 0.5rem 0;
            border-radius: 0.25rem;
        }

        .interpretation-section {
            margin-bottom: 0;
            padding: 1.5rem;
            background-color: #f8f9fa;
            border-radius: 0.25rem 0.25rem 0 0;
            max-height: 400px;
            overflow: hidden;
            transition: max-height 0.3s ease-out;
            position: relative;
        }

        .interpretation-section:not(.expanded)::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 70px;
            background: linear-gradient(transparent, #f8f9fa);
            pointer-events: none;
        }

        .interpretation-section.expanded {
            max-height: 2000px;
        }

        .toggle-interpretation {
            display: block;
            width: 100%;
            text-align: center;
            padding: 8px;
            background-color: #e9ecef;
            border: none;
            border-radius: 0 0 0.25rem 0.25rem;
            cursor: pointer;
            margin-bottom: 2rem;
            font-weight: 500;
            color: #0d6efd;
        }

        .toggle-interpretation:hover {
            background-color: #dee2e6;
            color: #0a58ca;
        }

        .toggle-interpretation::after {
            content: 'â–¼';
            display: inline-block;
            margin-left: 5px;
            font-size: 0.8em;
            transition: transform 0.3s;
        }

        .interpretation-section.expanded + .toggle-interpretation::after {
            transform: rotate(180deg);
        }

        @media (max-width: 767.98px) {
            .data-row [class*="col-"] {
                margin-bottom: 1rem;
            }

            /* Add labels before content on mobile */
            .data-row [class*="col-"]::before {
                content: attr(data-label);
                font-weight: bold;
                display: block;
                margin-bottom: 0.5rem;
            }

            /* Hide header row on mobile */
            .header-row {
                display: none;
            }

            .interpretation-section {
                max-height: 300px;
            }

            .interpretation-section.expanded {
                max-height: 5000px;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1>Media Lens</h1>
                    <h2>{{ week_display }}</h2>
                </div>
                <div>
                    <a href="medialens.html" class="btn btn-outline-light">Back to Index</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Weekly Interpretation Section -->
        <div class="interpretation-section" id="interpretationSection">
            <h3>Weekly Media Analysis</h3>
            <div class="row g-0 header-row p-2">
                <div class="col-12 col-md-3">Question</div>
                {% for site in sites %}
                <div class="col-12 col-md-3">{{ site }}</div>
                {% endfor %}
            </div>
            {% for row in interpretation %}
            <div class="row g-0 data-row p-2 border-top">
                <div class="col-12 col-md-3 p-3">
                    <b>{{ row.question }}</b>
                </div>
                {% for site in sites %}
                <div class="col-12 col-md-3 p-3" data-label="{{ site}}">
                    {{ row.answers[site] }}
                </div>
                {% endfor %}
            </div>
            {% endfor %}
        </div>
        <button class="toggle-interpretation" id="toggleInterpretation">Show More</button>
        
        <!-- Presidential Moral Analysis Section -->
        {% if morality_analysis %}
        <div class="mt-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Presidential Statements vs. Gospel Teachings</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h4>Summary</h4>
                        <p>{{ morality_analysis.summary }}</p>
                        <p><strong>Alignment with Gospel Teachings:</strong> {{ morality_analysis.alignment_score }}</p>
                    </div>
                    
                    {% if morality_analysis.selected_headlines %}
                    <div class="mb-4">
                        <h5>Analyzed Headlines</h5>
                        <p class="text-muted small">The following headlines were selected for analysis:</p>
                        <ul class="list-group mb-3">
                            {% for headline in morality_analysis.selected_headlines %}
                            <li class="list-group-item small">
                                <span class="badge bg-secondary me-2">{{ headline.site }}</span>
                                {{ headline.title }}
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endif %}
                    
                    {% if morality_analysis.key_teachings %}
                    <div class="mb-4">
                        <h4>Key Gospel Teachings Referenced</h4>
                        <ul class="list-group">
                            {% for teaching in morality_analysis.key_teachings %}
                            <li class="list-group-item">{{ teaching }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endif %}
                    
                    {% if morality_analysis.analysis %}
                    <h4>Detailed Analysis</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Presidential Statement/Action</th>
                                    <th>Gospel Teaching</th>
                                    <th>Alignment</th>
                                    <th>Explanation</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in morality_analysis.analysis %}
                                <tr>
                                    <td>{{ item.quote_or_action }}</td>
                                    <td>{{ item.gospel_principle }}</td>
                                    <td>
                                        {% if item.alignment == "aligned" %}
                                            <span class="badge bg-success">Aligned</span>
                                        {% elif item.alignment == "partially aligned" %}
                                            <span class="badge bg-warning text-dark">Partially Aligned</span>
                                        {% else %}
                                            <span class="badge bg-danger">Not Aligned</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ item.explanation }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="alert alert-warning">
                        No presidential quotes or actions were found to analyze in this week's content.
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Table of Contents -->
        <div class="my-4">
            <h3>Jump to Date</h3>
            <div class="d-flex flex-wrap gap-2">
                {% for run in runs %}
                <a href="#date-{{ run.run_timestamp|replace(' ', '-')|replace(':', '-') }}"
                   class="btn btn-outline-secondary">
                    {{ run.run_timestamp }}
                </a>
                {% endfor %}
            </div>
        </div>

        <!-- Headlines Comparison -->
        <h3>Headlines Comparison</h3>
        <p class="text-muted">Headlines are presented in reverse chronological order (newest first)</p>

        {% for run in runs %}
        <div class="date-header" id="date-{{ run.run_timestamp|replace(' ', '-')|replace(':', '-') }}">
            <h4>{{ run.run_timestamp }}</h4>
        </div>
        <div class="border rounded overflow-hidden mb-4">
            <!-- Headers -->
            <div class="row g-0 header-row p-2">
                {% for site in sites %}
                <div class="col-12 col-md-{{ 12 // sites|length }}">{{ site }}</div>
                {% endfor %}
            </div>
            
            <!-- Story rows -->
            <div class="row g-0 data-row p-2 border-top">
                {% for site in sites %}
                <div class="col-12 col-md-{{ 12 // sites|length }} p-3" data-label="{{ site }}">
                    <ol>
                        {% for extracted in run.extracted %}
                            {% if extracted.site == site %}
                                {% for story in extracted.stories %}
                                    <li><a href="{{ story.url }}" target="_blank">{{ story.title }}</a></li>
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                    </ol>
                </div>
                {% endfor %}
            </div>
            {% if run.news_summary %}
            <!-- Expandable new summary for the day -->
            <div class="row g-0 data-row p-2 border-top">
                <div class="col-12 col-md-12 p-3">
                    <strong>Daily News Summary</strong>
                    <p>{{ run.news_summary }}</p>
                </div>
            </div>
            {% endif %}
            <!-- Q&A rows -->
        {% if run.interpreted %}
            {% for i in range(run.interpreted[0].qa|length) %}
                <div class="row g-0 data-row p-2 border-top">
                    <div class="col-12 p-2">
                        <strong>{{ run.interpreted[0].qa[i].question }}</strong>
                    </div>
                </div>
                <div class="row g-0 data-row p-2">
                    {% for interpreted in run.interpreted %}
                        <div class="col-12 col-md-{{ 12 // sites|length }} p-3" data-label="{{ interpreted.site }}">
                            {{ interpreted.qa[i].answer }}
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        {% endif %}
        </div>
        {% endfor %}
    </div>

    <div class="footer">
        <div class="container">
            <p>Media Lens &copy; 2025 | <a href="medialens.html">Back to Index</a></p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    document.getElementById('toggleInterpretation').addEventListener('click', function() {
        const section = document.getElementById('interpretationSection');
        const button = document.getElementById('toggleInterpretation');
        section.classList.toggle('expanded');
        button.textContent = section.classList.contains('expanded') ? 'Show Less' : 'Show More';
    });
    </script>
</body>
</html>